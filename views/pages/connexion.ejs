<%- include('../partials/head', {title:"Connexion | Dinopark"})%>
    <%- include('../partials/header') %>

        <main>
            <% if(authError) { %>
                <p class="error"><%= authError %></p>
            <% } %>
            <form class="form-connexion" method="post" action="/auth">
                <label class="form-label" for="mail">Email</label>
                <input class="form-input-mail" type="email" id="mail" name="mail">
                <label class="form-label" for="mail">Mot de passe</label>
                <input class="form-input-password" type="password" id="password" name="password">
                <input class="form-submit" type="submit" id="submit-button" value="Connexion">
            </form>

            <a href="/sign-up" class="signup-link">Inscription</a>
        </main>

        <%- include('../partials/footer') %>